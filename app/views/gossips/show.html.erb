<%= render "header/header" %>

<div class="card-deck">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @gossip.title %></h5>
      <p class="card-text"><%= @gossip.content %></p>
      <p class="card-text">
          <small class="">
              <a href="/author/<%= @gossip.user.id %>">
                  <%= @gossip.user.first_name %>
              </a>
          </small>
      </p>
      <p class="card-text">
          <small class="text-muted">
              Créé le <%= @gossip.created_at.strftime("%d/%m/%Y à %H:%M") %>
          </small>
      </p>
    </div>
  </div>
</div>